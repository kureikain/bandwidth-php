{
  "base":"https://api.catapult.inetwork.com",
  "version":"v1",
  "authorization":{
    "need_auth":true,
    "basic" : true, 
    "header": true
  },
  "request":{
    "formats":{
      "default":"form",
      "form":true
    }
  },
  "response":{
    "formats":{
      "default":"json",
      "json":true
    },
    "suffix":false
  },
  "error":{
    "message":"error"
  },
  "class":{
    "account":{
      "args": ["user_id"],
      "show":{
        "path":"/users/:user_id/account"
      },
      "transactions":{
        "path":"/users/:user_id/account/transactions"
      }
    },
    "availableNumbers":{
      "searchLocal":{
        "path":"/availableNumbers/local",
        "params": [
          {
            "name": "city"
          },
          {
            "name": "state"
          },
          {
            "name": "zip"
          },
          {
            "name": "areaCode"
          },
          {
            "name": "localNumber"
          },
          {
            "name": "inLocalCallingArea"
          },
          {
            "name": "quantity"
          },
          {
            "name": "pattern"
          }
        ]
        
      },
      "createlocal":{
        "path":"/availablenumbers/local",
        "method":"post",
        "params": [
          {
            "name": "city"
          },
          {
            "name": "state"
          },
          {
            "name": "zip"
          },
          {
            "name": "areaCode"
          },
          {
            "name": "localNumber"
          },
          {
            "name": "inLocalCallingArea"
          },
          {
            "name": "quantity"
          }
        ]
      },
      "searchtollfree":{
        "path":"/availablenumbers/tollfree"
      },
      "createtollfree":{
        "path":"/availablenumbers/tollfree",
        "method":"post"
      }
    },
    "messages":{
      "args": ["user_id"],
      "fetch":{
        "path":"/users/:user_id/messages"
      },
      "create":{
        "path":"/users/:user_id/messages",
        "method":"post"
      },
      "show":{
        "path":"/users/:user_id/messages/:id",
        "params":[
          {
            "name":"id",
            "required":true,
            "url_use":true
          }
        ]
      }
    },
    "calls":{
      "args": ["user_id"],
      "fetch":{
        "path":"/users/:user_id/calls"
      },
      "create":{
        "path":"/users/:user_id/calls",
        "method":"post",
        "params":[
          {
            "name":"to",
            "required":true
          },
          {
            "name":"from",
            "required":true
          }
        ]
      },
      "show":{
        "path":"/users/:user_id/calls/:call_id",
        "params":[
          {
            "name":"call_id",
            "required":true,
            "url_use":true
          }
        ]
      },
      "update":{
        "path":"/users/:user_id/calls/:call_id",
        "method":"post",
        "params":[
          {
            "name":"call_id",
            "required":true,
            "url_use":true
          }
        ]
      },
      "audio":{
        "path":"/users/:user_id/calls/:call_id/audio",
        "method":"post",
        "params":[
          {
            "name":"call_id",
            "required":true,
            "url_use":true
          }
        ]
      },
      "dtmf":{
        "path":"/users/:user_id/calls/:call_id/dtmf",
        "method":"post",
        "params":[
          {
            "name":"call_id",
            "required":true,
            "url_use":true
          }
        ]
      },
      "recordings":{
        "path":"/users/:user_id/calls/:call_id/recordings",
        "params":[
          {
            "name":"call_id",
            "required":true,
            "url_use":true
          }
        ]
      },
      "creategather":{
        "path":"/users/:user_id/calls/:call_id/gather",
        "method":"post",
        "params":[
          {
            "name":"call_id",
            "required":true,
            "url_use":true
          }
        ]
      },
      "gather":{
        "path":"/users/:user_id/calls/:call_id/gather/:gather_id",
        "params":[
          {
            "name":"call_id",
            "required":true,
            "url_use":true
          },
          {
            "name":"gather_id",
            "required":true,
            "url_use":true
          }
        ]
      },
      "updategather":{
        "path":"/users/:user_id/calls/:call_id/gather/:gather_id",
        "params":[
          {
            "name":"call_id",
            "required":true,
            "url_use":true
          },
          {
            "name":"gather_id",
            "required":true,
            "url_use":true
          }
        ],
        "method":"post"
      }
    },

    "numberinfo": {
      "args": ["number"],
      "show": {
        "path": "/phonenumbers/numberinfo/:number" 
      }
    },

    "phonenumbers": {
      "args": ["user_id"],
      "fetch": {
        "path": "/users/:user_id/phonenumbers"
      },

      "create": {
        "path": "/users/:user_id/phonenumbers",
        "method": "post",
        "params": [
          { 
            "name": "number",
            "required": true
          },
          {
            "name": "applicationid"
          },
          {
            "name": "name"
          },
          {
            "name": "fallbacknumber"
          }
        ]
      },
      
      "showbyid": {
        "path": "/users/:user_id/phonenumbers/:number_id",
        "params": [
          {
            "name": "number_id",
            "required": true,
            "url_use": true
          }
        ]
      },
      
      "showbynumber": {
        "path": "/users/:user_id/phonenumbers/:number",
        "params": [
          {
            "name": "number",
            "required": true,
            "url_use": true
          }
        ]
      },

      "update": {
        "path": "/users/:user_id/phonenumbers/:number_id",
        "method": "post",
        "params": [
          {
            "name": "number_id",
            "required": true,
            "url_use": true
          }
        ]
      },

      "destroy": {
        "path": "/users/:user_id/phonenumbers/:number_id",
        "method": "delete",
        "params": [
          {
            "name": "number_id",
            "required": true,
            "url_use": true
          }
        ]
      }
    }

  }
}
